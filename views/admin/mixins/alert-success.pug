mixin alert-success(time)
  - if(messages.success)
      .messages.info   
          div(
            class="alert alert-success"
            show-alert 
            data-time=time
          ) #{messages.success}
            span(
              class="close"
              close-alert
            ) X
mixin alert-error(time)
  - if(messages.error)
      .messages.info   
          div(
            class="alert alert-danger"
            show-alert 
            data-time=time
          ) #{messages.error}
            span(
              class="close"
              close-alert
            ) X
