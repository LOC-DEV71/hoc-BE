extends ../../layout/auth
include ../../mixins/alert-success

block main
    +alert-success(5000)
    +alert-error(5000)

    .container 
        .login-container
            .login-box
                h2.title Đăng nhập Admin
                form(
                    method="POST" 
                    action=`${prefixAdmin}/auth/login`
                )
                    .form-group
                        label(for="email") Email
                        input(
                            type="email"
                            name="email"
                            id="email"
                            placeholder="Nhập email"
                            required
                        )

                    .form-group
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            name="password"
                            id="password"
                            placeholder="Nhập mật khẩu"
                            required
                        )

                    button.btn-submit(type="submit") Đăng nhập
