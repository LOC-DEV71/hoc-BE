extends ../../layout/default
include ../../mixins/alert-success
block main
    h1 #{title}
    +alert-error(5000)
    +alert-success(5000)
    form(
        action=`${prefixAdmin}/roles/create`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                
            )
        div(class="form-group")
            label(for="description") Mô tả
            input(
                type="text"
                class="form-control mb-2"
                id="description"
                name="description"
                
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới